<h1>Articles</h1>

<ul>
  <% @articles.each do |article| %>
    <div class="card" style="width: 18rem; height: 10rem">
      <div class="card-body">
        <h5 class="card-title"><%= link_to article.title, article %></h5>
        <p class="card-text"><%= article.body %></p>
      </div>
    </div>
    <br>
  <% end %>
</ul>

<%= link_to "New Article", new_article_path %>
